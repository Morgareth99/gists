bindsym $mod+t mode layer
mode "layer" {
  bindsym --release h exec xdotool key Left
  bindsym --release j exec xdotool key Down
  bindsym --release k exec xdotool key Up
  bindsym --release l exec xdotool key Right
  bindsym --release u exec xdotool key Page_Up
  bindsym --release o exec xdotool key Page_Down
  bindsym --release n exec xdotool key Home
  bindsym --release m exec xdotool key End
  bindsym Escape mode "default"
}


